{
  "version": 2,
  "framework": null,
  "functions": {
    "api/*.php": { "runtime": "vercel-php@0.7.0" }
  },
  "routes": [
    { "src": "/build/(.*)", "dest": "/public/build/$1" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "outputDirectory": "public",
  "installCommand": "composer install --no-dev && npm install",
  "buildCommand": "npm run build"
}